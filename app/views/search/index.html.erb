<h1 class="text-center"><%= pluralize(@posts.count, "Result") %></h1>

<div class="container">
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th><%= sort_link(@query, :body, "Post") %></th>
        <th><%= sort_link(@query, :user_username, "Users") %></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.body.truncate_words(25) %></td>
          <td><%= link_to post.user.username, post.user %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
